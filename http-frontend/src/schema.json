{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "deployment-type": {
            "type": "string"
        },
        "stages": {
            "type": "object",
            "properties": {
                "ingestion": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "storage": {
                                "type": "object",
                                "properties": {
                                    "type": {
                                        "type": "string"
                                    },
                                    "protocol": {
                                        "type": "string"
                                    },
                                    "persistence": {
                                        "type": "boolean"
                                    }
                                },
                                "required": [
                                    "persistence",
                                    "protocol",
                                    "type"
                                ]
                            },
                            "polling": {
                                "type": "boolean"
                            },
                            "custom-config": {
                                "type": "string"
                            },
                            "id": {
                                "type": "string"
                            },
                            "implementation": {
                                "type": "string"
                            },
                            "view": {
                                "type": "object",
                                "properties": {
                                    "type": {
                                        "type": "string"
                                    },
                                    "protocol": {
                                        "type": "string"
                                    },
                                    "persistence": {
                                        "type": "boolean"
                                    }
                                },
                                "required": [
                                    "persistence",
                                    "protocol",
                                    "type"
                                ]
                            }
                        },
                        "required": [
                            "custom-config",
                            "id",
                            "implementation"
                        ]
                    }
                },
                "processing": {
                    "type": "array"
                },
                "output": {
                    "type": "object",
                    "properties": {
                        "backend1": {
                            "type": "object",
                            "properties": {
                                "links": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "links"
                            ]
                        }
                    },
                    "required": [
                        "backend1"
                    ]
                }
            },
            "required": [
                "ingestion",
                "output",
                "processing"
            ]
        }
    },
    "required": [
        "deployment-type",
        "stages"
    ]
}